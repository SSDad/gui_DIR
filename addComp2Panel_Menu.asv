function Comp = addComp2Panel_Menu(hPanel)

nBG = 4;  % Button Group
nB = [4 4 4 4];

gl = uigridlayout(hPanel, [nBG 1]);
gl.RowHeight = {'1x','1x', '1x', '1x'};

for k = 1:nBG
    hSubPanel(k) = uipanel(gl);
    hSubPanel(k).Layout.Row = nB(k);
    hSubPanel(k).Layout.Column = 1;
    hSubPanel(k).BackgroundColor = 'k';
end


